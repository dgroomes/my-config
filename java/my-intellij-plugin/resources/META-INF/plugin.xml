<idea-plugin>

    <id>dgroomes.myIntellijPlugin</id>
    <name>My IntelliJ Plugin</name>
    <depends>com.intellij.modules.platform</depends>

    <description>
        <![CDATA[
      NOT YET FULLY IMPLEMENTED. My personal IntelliJ plugin.<br>
      See the project in GitHub:
      <a href="https://github.com/dgroomes/my-software">my-software</a>
    ]]>
    </description>

    <vendor url="https://github.com/dgroomes">https://github.com/dgroomes</vendor>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Open Files" secondary="true" icon="AllIcons.General.Modified" anchor="right"
                    factoryClass="dgroomes.MyToolWindowFactory"/>
        <projectService serviceImplementation="dgroomes.CopyOpenTabsService"/>
    </extensions>

    <actions>
        <action id="CopyOpenTabs" class="dgroomes.CopyOpenTabsAction" text="Copy Open Tab Names" description="Copy names of open editor tabs to clipboard">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="control alt C"/>
        </action>
    </actions>

</idea-plugin>
