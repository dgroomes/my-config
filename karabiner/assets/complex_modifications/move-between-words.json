{
  "title": "Move between words",
  "rules": [
    {
      "description": "right_control + comma to option + left_arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
              "key_code": "comma",
              "modifiers": {
                  "mandatory": [
                      "right_control"
                  ],
                  "optional": [
                      "left_shift"
                  ]
              }
          },
          "to": [
              {
                  "key_code": "left_arrow",
                  "modifiers": [
                      "left_option"
                  ]
              }
          ]
        }
      ]
    },
    {
      "description": "right_control + period to option + right_arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
              "key_code": "period",
              "modifiers": {
                  "mandatory": [
                      "right_control"
                  ],
                  "optional": [
                      "left_shift"
                  ]
              }
          },
          "to": [
              {
                  "key_code": "right_arrow",
                  "modifiers": [
                      "left_option"
                  ]
              }
          ]
        }
      ]
    }
  ]
}
